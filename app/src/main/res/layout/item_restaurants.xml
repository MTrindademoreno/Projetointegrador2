<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="2dp"
    android:id="@+id/layout_item"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_item_restaurant"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_fastfood_24"
            android:contentDescription="@string/imagem_do_prato" />

        <LinearLayout
            android:layout_margin="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textStyle="bold"

                android:id="@+id/txt_name_restaurant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/titulo"
                android:textSize="@dimen/size_nome"
                 />

            <TextView

                android:id="@+id/txt_endereco_restaurant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_info_restaurant"
                android:textSize="@dimen/size_endereco"
                />

            <TextView
                android:id="@+id/txt_horario_restaurant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_info_restaurant"
                android:textSize="@dimen/size_horario" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
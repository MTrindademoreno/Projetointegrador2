<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="2dp"
    android:id="@+id/layout_item"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_item_restaurant"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_fastfood_24"
            android:contentDescription="@string/imagem_do_prato" />

        <LinearLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textStyle="bold"

                android:id="@+id/txt_name_restaurant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#1F2D3D"
                android:textSize="18sp"
                tools:text="Restaurant - Unidade" />

            <TextView

                android:id="@+id/txt_endereco_restaurant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#8492A6"
                android:textSize="11sp"
                tools:text="Rua lavandisca , 532 - Moema" />

            <TextView

                android:id="@+id/txt_horario_restaurant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#8492A6"
                android:textSize="11sp"
                tools:text="fecha Ã s 19:00" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>